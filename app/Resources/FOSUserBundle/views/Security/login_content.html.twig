

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">
    <div class="card col s6 form-cont offset-s3">
        <h4 class="center">Connectez vous !</h4>
        <form action="{{ path("fos_user_security_check") }}" method="post" class="m-l">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <label for="username">Votre username : </label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

            <label for="password">Votre password :</label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">se souvenir de moi</label>
            <div class="flex">
                <button class="btn waves-effect waves-light m-l" type="submit" id="_submit" name="_submit">Login
                    <i class="material-icons right">send</i>
                </button>
            </div>


        </form>
    </div>

</div>